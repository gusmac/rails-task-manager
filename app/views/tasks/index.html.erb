<h1>All Tasks</h1>

<ul>
  <% @tasks.each do |t| %>
  <% if t.completed == true %>
      <li> <%= fa_icon "check-square" %> <%= link_to t.title, task_path(t) %></li>
    <% else %>
      <li> <%= fa_icon "square" %> <%= link_to t.title, task_path(t) %></li>
    <% end %>
  <% end %>
</ul>

<p><%= link_to "Add a new task", new_path %></p>
